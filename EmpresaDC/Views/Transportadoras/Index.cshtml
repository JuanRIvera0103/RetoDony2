@model IEnumerable<ImportacionesDC.Models.Entities.Transportadora>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="CrearEditar" class="btn btn-outline-success"><i class="fas fa-plus"></i>Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <a asp-action="CrearEditar" asp-route-id="@item.IdTransportadora" class="btn btn-outline-warning"><i class="fas fa-edit"></i>Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdTransportadora" class="btn btn-outline-primary"><i class="fas fa-search-plus"></i>Detalles</a> |
                <a asp-action="Eliminar" onclick="return confirm('¿Estas seguro de eliminar este elemento?')" asp-route-id="@item.IdTransportadora"class="btn btn-outline-danger"><i class="fas fa-trash-alt"></i>Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

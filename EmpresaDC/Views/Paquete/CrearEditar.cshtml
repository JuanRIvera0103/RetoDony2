@model ImportacionesDC.Models.Entities.Paquete

@{
    ViewData["Title"] = "Crear / Editar Paquete";
}

<h1>Crear / Editar Paquete</h1>
<hr />

<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="CrearEditar" name="f1" id="f1">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Codigo" />
            <input type="hidden" value="@ViewBag.ValorLibra" id="valorLibra"/>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="Peso" class="control-label"></label>
                    <input asp-for="Peso" class="form-control" onchange="ValorPesoLibra(this.value)"/>
                    <span asp-validation-for="Peso" class="text-danger"></span>
                </div>
                <div class="form-group col-md-8">
                    <label asp-for="Casillero" class="control-label"></label>
                    <select asp-for="Casillero" asp-items="@(new SelectList(ViewBag.Clientes, "NumeroCasillero","Nombre") )" class="form-control"></select>
                    <span asp-validation-for="Casillero" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Estado" class="control-label"></label>
                    @*@{
                        if (ViewBag.Editar)
                        {*@
                            <select asp-for="Estado" asp-items="@(new SelectList(ViewBag.Estados, "IdEstado","Nombre") )" class="form-control"></select>
                            @*//}
                            //else
                            //{*@
                            <select asp-for="Estado" asp-items="@(new SelectList(ViewBag.Estados, "IdEstado","Nombre") )" class="form-control" disabled></select>
                        @*}
                    }*@
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="Tracking" class="control-label"></label>
                    <input asp-for="Tracking" class="form-control" />
                    <span asp-validation-for="Tracking" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Empresa" class="control-label"></label>
                <select asp-for="Empresa" asp-items="@(new SelectList(ViewBag.Transportadora, "IdTransportadora","Nombre") )" class="form-control"></select>
                <span asp-validation-for="Empresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <select asp-for="Tipo" asp-items="@(new SelectList(ViewBag.Tipos, "IdTipoMercancia","Nombre") )" class="form-control"></select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-8">
                    <label asp-for="Guia" class="control-label"></label>
                    <input asp-for="Guia" class="form-control" />
                    <span asp-validation-for="Guia" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Valor" class="control-label"></label> 
                    <input asp-for="Valor" class="form-control" name="valor" id="valor"/>
                    <span asp-validation-for="Valor" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col-md-6">
                @{
                    @*if (ViewBag.Editar)
                    {
                        <button type="submit" value="Aceptar" class="btn btn-warning btn-block">
                            <i class="fas fa-check"></i> Editar
                        </button>
                    }
                    else*@
//{
                        <button type="submit" value="Aceptar" class="btn btn-primary btn-block">
                            <i class="fas fa-check"></i> Guardar
                        </button>
                    @*  *@}

                }

            </div>

            <div class="form-group col-md-6">
                <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fas fa-Veces"></i> Volver</a>
            </div>            
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

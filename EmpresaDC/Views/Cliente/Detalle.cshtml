@model ImportacionesDC.Models.Entities.Cliente

@{
    ViewData["Title"] = "Detalle";
    IEnumerable<ImportacionesDC.Clases.PaqueteDetalle> items =
    (IEnumerable<ImportacionesDC.Clases.PaqueteDetalle>)ViewBag.Paquetes;
}

<h1>Details</h1>

<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroCasillero)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroCasillero)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Correo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Correo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Direccion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
    </dl>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Codigo
            </th>
            <th>
                Peso
            </th>
            <th>
                Casillero
            </th>
            <th>
                Estado
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in items)
        {
        <tr>
            <td>
                MIA-@Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Peso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Casillero)
            </td>
            <td>
                @{
                    if (item.Estado.Equals("Entregado"))
                    {
                        <p class="text-success">@Html.DisplayFor(modelItem => item.Estado)</p>
                    }
                    else
                    {
                        <p class="text-warning">@Html.DisplayFor(modelItem => item.Estado)</p>
                    }
                }
            </td>
            <td>
                <a asp-controller="Paquete" asp-action="CrearEditar" asp-route-id="@item.Codigo" class="btn btn-outline-warning"><i class="fas fa-edit"></i> Editar</a>
                <a asp-controller="Paquete" asp-action="Detalle" asp-route-id="@item.Codigo" class="btn btn-outline-primary"><i class="fas fa-search-plus"></i> Detalles</a>
                <a asp-controller="Paquete" asp-action="Eliminar" onclick="return confirm('¿Estas seguro de eliminar este elemento?')" asp-route-id="@item.Codigo" class="btn btn-outline-danger"><i class="fas fa-trash-alt"></i> Eliminar</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="CrearEditar" asp-route-id="@Model.NumeroCasillero">Editar</a> |
    <a asp-action="Index">Volver al menu</a>
</div>

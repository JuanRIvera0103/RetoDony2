@model ImportacionesDC.Models.Entities.Cliente

@{ ViewData["Title"] = "Crear / Editar Cliente"; }

<h1>Crear / Editar Cliente</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="CrearEditar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NumeroCasillero" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="Correo" class="control-label"></label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>            
            <div class="form-row">
                <div class="form-group col-md-8">
                    <button type="submit" value="Aceptar" class="btn btn-primary btn-block">
                        <i class="fas fa-check"></i> Guardar
                    </button>
                </div>
                <div class="form-group col-md-4">
                    <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fas fa-Veces"></i> Volver</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}